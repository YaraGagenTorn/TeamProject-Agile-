<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoCartApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="20,40,20,40" VerticalOptions="Start">
            <Entry Placeholder="UserName" x:Name="EntryUser" Grid.Row="0"/>
            <Entry Placeholder="Password" x:Name="EntryPassword" IsPassword="True" Grid.Row="1"/>
            <Button Text="Login" Grid.Row="2" BackgroundColor="#0077be" TextColor="White" Clicked="Login_Button_Clicked"/>
            <Button Text="SignUp" Grid.Row="3" Clicked="SignUp_Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>