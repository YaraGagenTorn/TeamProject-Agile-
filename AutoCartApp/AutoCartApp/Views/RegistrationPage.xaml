<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoCartApp.Views.RegistrationPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="20,40,20,40" VerticalOptions="Start">
            <Entry Placeholder="UserName" FontSize="16" x:Name="EntryUserName"/>
            <Entry Placeholder="Password" IsPassword="True" FontSize="16" x:Name="EntryUserPassword"/>
            <Entry Placeholder="Email" FontSize="16" x:Name="EntryUserEmail"/>
            <Entry Placeholder="PhoneNumber" FontSize="16" x:Name="EntryUserPhoneNumber"/>
            <Button Text="Register" HorizontalOptions="CenterAndExpand" WidthRequest="100" 
                    TextColor="White" BackgroundColor="Blue" Clicked="RegButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>